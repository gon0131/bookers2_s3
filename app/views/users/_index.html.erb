<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(80,80) %></td>
        <td><%= user.name %></td>
        <td><%= "フォロー数:" + user.followings.count.to_s %></td>
        <td><%= "フォロワー数:" + user.followers.count.to_s %></td>
        <td><%= render "relationships/btn", user: user %></td>
        <td><%= link_to 'Show', user_path(user.id), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
